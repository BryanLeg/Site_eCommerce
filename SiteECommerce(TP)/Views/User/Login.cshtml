@using SiteECommerce_TP_.Models.ViewModels;

@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<h4>Sign in to your account</h4>
<form asp-controller="User" asp-action="Login" method="post">
    <div class="input-contner">
        <label asp-for="Email"></label>
        <input class="form-input" asp-for="Email" placeholder="type your mail adress" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Password"></label>
        <input class="form-input" asp-for="Password" placeholder="type your password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <div asp-validation-summary="ModelOnly"></div>
    </div>

    <div class="btn-contner">
        <input class="login-btn" type="submit" value="Login" />
    </div>
</form>